<UserControl x:Class="ThirtyRails.Controls.Tile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ThirtyRails.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
  <Grid>
    <Button>
      <Button.Template>
        <ControlTemplate>
          <Border>
            <Border.Style>
              <Style TargetType="Border">
                <Setter Property="Background" Value="WhiteSmoke"/>
                <Style.Triggers>
                  <DataTrigger Binding="{Binding IsValidTarget}" Value="True">
                    <Setter Property="Background" Value="LightGreen"/>
                  </DataTrigger>
                </Style.Triggers>
              </Style>
            </Border.Style>
            <Image Source="../Images/mountain.png" Visibility="{Binding IsMountain, Converter={StaticResource BooleanToVisibilityConverter}}"/>
          </Border>
        </ControlTemplate>
      </Button.Template>
    </Button>
  </Grid>
</UserControl>
